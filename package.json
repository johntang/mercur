{
  "private": true,
  "name": "mercur",
  "version": "1.0.0",
  "devDependencies": {
    "turbo": "^2.3.3"
  },
  "bin": {
    "mercur-exec": "./index.js"
  },
  "packageManager": "yarn@1.22.21",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/modules/*"
  ],
  "scripts": {
    "mercur-exec": "turbo run dev",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "build": "turbo run build",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "codegen": "cd .",
    "generate:oas": "turbo run generate:oas"
  },
  "engines": {
    "node": ">=20"
  }
}